.page-container {
  padding: 0 0 120rpx 0;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 状态提示 */
.status-tip {
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  opacity: 0;
  z-index: 100;
  text-align: center;
}

.status-tip.show {
  opacity: 1;
  animation: statusFade 2s forwards;
}

@keyframes statusFade {
  0% {
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  80% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

/* 蓝牙状态指示器 */
.bluetooth-status {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(30, 144, 255, 0.95);
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  z-index: 200;
  box-shadow: 0 8rpx 24rpx rgba(30, 144, 255, 0.3);
}

.bluetooth-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  animation: bluetoothSpin 2s linear infinite;
}

.bluetooth-text {
  font-size: 28rpx;
  font-weight: 500;
}

@keyframes bluetoothSpin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 定时列表 */
.timer-list {
  padding: 20rpx;
}

.timer-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.timer-item:active {
  transform: scale(0.98);
  background-color: #f8f9fa;
}

.timer-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.timer-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(145deg, #1E90FF, #0066CC);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
}

.icon-timer {
  font-size: 40rpx;
  color: white;
}

.timer-details {
  flex: 1;
}

.timer-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.timer-name {
  font-size: 26rpx;
  color: #1E90FF;
  background-color: #E3F2FD;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.timer-repeat {
  font-size: 24rpx;
  color: #666;
}

.timer-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}



.delete-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
  background-color: #ff3742;
}

.delete-icon {
  font-size: 28rpx;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 使用说明 */
.tips-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx 30rpx 60rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tip-icon {
  font-size: 28rpx;
  line-height: 1;
}

.tips-title text:last-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tip-bullet {
  font-size: 24rpx;
  color: #1E90FF;
  font-weight: bold;
  line-height: 1.6;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.save-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4);
}

.add-btn {
  background: linear-gradient(135deg, #1E90FF, #0066CC);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(30, 144, 255, 0.4);
}



/* 适配小屏幕 */
@media screen and (max-width: 375px) {
  .timer-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .icon-timer {
    font-size: 36rpx;
  }
  
  .timer-time {
    font-size: 30rpx;
  }
  
  .timer-name {
    font-size: 24rpx;
  }
  
  .timer-repeat {
    font-size: 22rpx;
  }
  
  .action-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
} 