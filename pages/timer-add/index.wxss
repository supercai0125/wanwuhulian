.page-container {
  padding: 0 0 150rpx 0;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 状态提示 */
.status-tip {
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  opacity: 0;
  z-index: 100;
  text-align: center;
}

.status-tip.show {
  opacity: 1;
  animation: statusFade 2s forwards;
}

@keyframes statusFade {
  0% {
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  80% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

/* 时间设置区域 */
.time-settings {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 设置标题统一样式 */
.setting-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* picker组件样式 */
picker {
  display: block;
  width: 100%;
}

.time-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.time-item:last-child {
  border-bottom: none;
}

picker:active .time-item {
  background-color: #f8f9fa;
}

.time-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.time-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.time-text {
  font-size: 32rpx;
  color: #1E90FF;
  font-weight: bold;
  min-width: 180rpx;
  text-align: right;
  white-space: nowrap;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  font-weight: bold;
}

/* 重复时间设置 */
.repeat-settings {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 0 0 30rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.repeat-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

/* 快捷选项 */
.repeat-quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 0 30rpx 30rpx 30rpx;
}

.quick-option {
  flex: 1;
  min-width: 120rpx;
  height: 64rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
}

.quick-option:active {
  transform: scale(0.95);
}

.quick-option.active {
  background: linear-gradient(135deg, #1E90FF, #0066CC);
  border-color: #1E90FF;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
}

.repeat-days {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  margin: 0 30rpx 20rpx 30rpx;
}

.day-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.day-item:active {
  transform: scale(0.9);
  transition: transform 0.1s ease;
}

.day-item.active:active {
  transform: scale(1.0);
}

.day-item:hover {
  border-color: #1E90FF;
  color: #1E90FF;
  background-color: rgba(30, 144, 255, 0.1);
}

.day-item.active {
  background: linear-gradient(135deg, #1E90FF, #0066CC);
  border-color: #1E90FF;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  font-weight: bold;
  transform: scale(1.05);
  animation: dayItemPulse 2s ease-in-out infinite;
}

.day-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), transparent);
  border-radius: 50%;
  pointer-events: none;
}

/* 选中状态的轻微脉动动画 */
@keyframes dayItemPulse {
  0% {
    box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  }
  50% {
    box-shadow: 0 4rpx 16rpx rgba(30, 144, 255, 0.4);
  }
  100% {
    box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  }
}

/* 重复模式描述 */
.repeat-description {
  padding: 20rpx;
  margin: 0 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #1E90FF;
}

.repeat-description text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 底部保存按钮 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 20rpx 50rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #1E90FF, #0066CC);
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(30, 144, 255, 0.4);
}

.save-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 28rpx;
  line-height: 1;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 使用说明 */
.tips {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx 30rpx 60rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tip-icon {
  font-size: 28rpx;
  line-height: 1;
}

.tip-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tip-list {
  display: flex;
  flex-direction: column;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-bullet {
  font-size: 24rpx;
  color: #1E90FF;
  font-weight: bold;
  line-height: 1.6;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 适配小屏幕 */
@media screen and (max-width: 375px) {
  .time-item {
    padding: 35rpx 25rpx;
  }
  
  .time-label {
    font-size: 30rpx;
  }
  
  .time-text {
    font-size: 30rpx;
    min-width: 160rpx;
  }
  
  .repeat-title {
    font-size: 30rpx;
  }
  
  .day-item {
    width: 70rpx;
    height: 70rpx;
    font-size: 26rpx;
  }
  
  .day-item.active {
    transform: scale(1.05);
  }
  
  .save-btn {
    height: 70rpx;
    font-size: 30rpx;
  }
} 