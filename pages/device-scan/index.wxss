.page-container {
  padding: 20rpx;
  background-color: #F6F6F6;
  height: calc(100vh - 88rpx); /* 减去导航栏高度 */
  box-sizing: border-box;
}

/* 为设备列表添加底部边距，避免最后一个设备被遮挡 */

.scan-header {
  text-align: center;
  padding: 40rpx 0;
}

.scan-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.scan-subtitle {
  font-size: 28rpx;
  color: #888;
}

.scan-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  position: relative;
}

.scan-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgba(30, 144, 255, 0.1);
  position: relative;
}

.scan-pulse {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: transparent;
  border: 6rpx solid rgba(30, 144, 255, 0.5);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    opacity: 1;
  }
  70% {
    transform: scale(1.5);
    opacity: 0;
  }
  100% {
    transform: scale(0.95);
    opacity: 0;
  }
}

.device-list {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 60rpx; /* 增加底部边距，避免最后一个设备被遮挡 */
}

.list-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.device-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.device-icon {
  width: 70rpx;
  height: 70rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.device-icon image {
  width: 40rpx;
  height: 40rpx;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.device-badge {
  font-size: 20rpx;
  color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.device-mac {
  font-size: 24rpx;
  color: #999;
}

.device-detail {
  font-size: 22rpx;
  color: #666;
  margin-top: 4rpx;
}

.device-signal {
  font-size: 24rpx;
  color: #1E90FF;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}



