.page-container {
  padding: 0 0 150rpx 0;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 状态提示 */
.status-tip {
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  opacity: 0;
  z-index: 100;
  text-align: center;
}

.status-tip.show {
  opacity: 1;
  animation: statusFade 2s forwards;
}

@keyframes statusFade {
  0% { opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

/* 设置区域通用样式 */
.location-settings,
.time-settings {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.setting-title {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  border-bottom: 1rpx solid #f0f0f0;
  white-space: nowrap;
  gap: 12rpx;
}

.title-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

/* 位置信息样式 */
.location-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  gap: 20rpx;
}

.location-info {
  flex: 1;
  min-width: 0;
}

.location-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: nowrap;
}

.location-text {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.location-text.loading {
  color: #1E90FF;
}

.location-text.error {
  color: #ff4757;
}

/* 改进的刷新链接样式 */
.refresh-action {
  flex-shrink: 0;
  align-self: flex-start;
  margin-top: 2rpx;
}

.refresh-link {
  font-size: 26rpx;
  color: #1E90FF;
  text-decoration: none;
  padding: 6rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  background-color: transparent;
  border: none;
  white-space: nowrap;
}

.refresh-link:active {
  background-color: rgba(30, 144, 255, 0.1);
  transform: scale(0.95);
}

.refresh-link.loading {
  color: #17a2b8;
  opacity: 0.7;
}

/* 模式切换样式 */
.mode-toggle {
  display: flex;
  margin: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  gap: 6rpx;
}

.toggle-option {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 0;
}

.toggle-option.active {
  background-color: #1E90FF;
  box-shadow: 0 2rpx 8rpx rgba(30, 144, 255, 0.3);
}

.option-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.toggle-option.active .option-icon {
  transform: scale(1.1);
}

.option-content {
  flex: 1;
  min-width: 0;
}

.option-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.toggle-option.active .option-title {
  color: white;
}

.option-desc {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.toggle-option.active .option-desc {
  color: rgba(255, 255, 255, 0.8);
}

/* 时间显示样式 */
.time-display {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.time-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.time-value-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.time-value {
  font-size: 36rpx;
  color: #1E90FF;
  font-weight: bold;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  white-space: nowrap;
}

.time-badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.time-badge.auto {
  background-color: #e3f2fd;
  color: #1976d2;
}

.time-badge.manual {
  background-color: #fff3e0;
  color: #f57c00;
}

.badge-text {
  font-weight: 500;
}

/* 时间选择器样式 */
.time-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #f8f9fa;
  margin: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  gap: 20rpx;
}

.time-picker:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.picker-content {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.picker-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.picker-arrow {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 底部操作按钮 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 20rpx 50rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #1E90FF, #0066CC);
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.save-btn:active {
  transform: scale(0.98);
}

.save-btn:disabled {
  background: #ccc;
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 使用说明 */
.tips {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx 30rpx 60rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tip-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.tip-list {
  display: flex;
  flex-direction: column;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-bullet {
  font-size: 24rpx;
  color: #1E90FF;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

/* 适配小屏幕 */
@media screen and (max-width: 375px) {
  .location-item {
    padding: 35rpx 25rpx;
    gap: 15rpx;
  }
  
  .location-label,
  .time-label {
    font-size: 30rpx;
  }
  
  .location-text {
    font-size: 24rpx;
  }
  
  .time-value {
    font-size: 32rpx;
  }
  
  .setting-title {
    font-size: 30rpx;
    padding: 25rpx 25rpx 15rpx 25rpx;
  }
  
  .save-btn {
    height: 70rpx;
  }
  
  .btn-text {
    font-size: 30rpx;
  }
  
  .refresh-link {
    padding: 6rpx 10rpx;
    font-size: 24rpx;
  }
  
  .toggle-option {
    padding: 16rpx 8rpx;
  }
  
  .option-icon {
    margin-right: 6rpx;
  }
  
  .option-title {
    font-size: 24rpx;
  }
  
  .option-desc {
    font-size: 18rpx;
  }
  
  .time-info {
    gap: 15rpx;
  }
  
  .time-value-container {
    gap: 8rpx;
  }
  
  .time-picker {
    padding: 25rpx;
    gap: 15rpx;
  }
} 